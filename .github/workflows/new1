name: Extract and Log Check Times

on:
  schedule:
    - cron: '*/29 * * * *' # Every 29 minutes
  push:
    branches:
      - main

jobs:
  extract-check-times:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout repository
      uses: actions/checkout@v3

    - name: Fetch data from source
      run: |
        echo "Fetching data from source"
        curl -L -o data.txt "https://drive.google.com/uc?export=download&id=1-6p05WRNFuCef8OnlkexeZP-HR-hRXYl"
        echo "Fetch response code: $?"
        cat data.txt

    - name: Sanitize and process data
      run: |
        echo "Sanitizing and processing data"
        # Remove any unexpected characters
        tr -d '\r' < data.txt > sanitized_data.txt
        cat sanitized_data.txt
        
        # Extract check times based on line number (assuming consistent format)
        computer_time=$(sed -n '2p' sanitized_data.txt | cut -d',' -f2)
        ib_time=$(sed -n '3p' sanitized_data.txt | cut -d',' -f2)
        
        # Ensure times are correctly extracted
        echo "Extracted Computer Check Time: $computer_time"
        echo "Extracted IB Check Time: $ib_time"
        
        # Log the extracted times
        echo "Computer Check Time: $computer_time"
        echo "IB Check Time: $ib_time"
